{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Comp",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/comp",
            "program": "${workspaceFolder}/flow/python/Magical.py",
            "args": [
                "comp.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "ADC1",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/adc1",
            "program": "${workspaceFolder}/flow/python/Magical.py",
            "args": [
                "adc1.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "NOT",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/not",
            "program": "${workspaceFolder}/flow/python/Magical.py",
            "args": [
                "not.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "GPDK_CIRCUITS",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/gpdk_circuits",
            "program": "${workspaceFolder}/flow/python/Magical.py",
            "args": [
                "gpdk_circuits.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "/usr/local/bin/python3",
        },
        {
            "name": "Python C++ Debugger",
            "type": "pythoncpp",
            "request": "launch",
            "pythonLaunchName": "GPDK_CIRCUITS",
            "cppAttachName": "(gdb) Attach"
        },
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/local/bin/python3",
            "processId": "",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            // This is the configuration for debugging c++ anaroute
            "name": "anaroute",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/anaroute/bin/anaroute",
            "args": [
                "anaroute.json"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/anaroute/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build anaroute"
        }
    ]
}