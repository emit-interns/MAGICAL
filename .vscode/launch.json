    "version": "0.2.0",
    "configurations": [
        {
            "name": "Comp",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/comp",
            "program": "${workspaceFolder}/flow/python/Magical.py",
            "args": [
                "comp.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "ADC1",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/adc1",
            "program": "${workspaceFolder}/flow/python/Magical.py",
            "args": [
                "adc1.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "NOT",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/examples/not",
            "program": "${workspaceFolder}/flow/python/Magical.py",
            "args": [
                "not.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            // This is the configuration for debugging c++ anaroute
            "name": "anaroute",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/anaroute/bin/anaroute",
            "args": [
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/anaroute/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build anaroute"
        }
    ]
}